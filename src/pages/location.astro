---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
import GoogleAnalytics from "@components/googleAnalytics";
---

<Layout title="Location">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Location</Fragment>
      <Fragment slot="desc">A beer hall for music</Fragment>
    </Sectionhead>
    <head>
      <GoogleAnalytics client:load />
    </head>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div class="px-5 md:px-0">
        <h2 class="font-medium text-2xl text-gray-800">
          Royal City Brewing Co.
        </h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          We're lucky to be hosted within the main beer hall of Royal City
          Brewing Co. The brewery is located on the east side of Guelph and is
          open to all ages. They have a great select of food and, of course,
          amazing beer.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>199 Victoria Road South Unit C8</span>
            <span> Guelph, Ontario</span>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:info@royalcitybrew.ca">info@royalcitybrew.ca</a
            >
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+1 (888) 485 2739">+1 888-485-2739</a
            >
          </div>
        </div>
      </div>
      <div class="px-5 md:px-0">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d64182.64387615399!2d-80.27855622028885!3d43.55149996803152!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882b9b1afc610dad%3A0x7700de5e0d30a7af!2sRoyal%20City%20Brewing%20Company!5e0!3m2!1sen!2sca!4v1710122917371!5m2!1sen!2sca"
          width="100%"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </Container>
</Layout>
