---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import GoogleAnalytics from "@components/googleAnalytics";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">Here for any questions</Fragment>
    </Sectionhead>
    <head>
      <GoogleAnalytics client:load />
    </head>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Get in Touch</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Whether you're a musician with questions, a venue interested in
          hosting, or a supporter looking to stay in the loop — we’d love to
          hear from you. Drop us a line and we’ll get back to you as soon as we
          can.
        </p>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
