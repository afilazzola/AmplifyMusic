---
import { Picture } from "astro:assets";
import heroImage from "assets/openMicGraphic.png";
import Link from "@components/ui/link.astro";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24"
>
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="A microphone stylized like the Obama Hope poster"
      widths={[200, 400, 600]}
      sizes="(max-width: 750) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
    >
      Discover. Perform. Connect.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Open Mic Night presented by Fitz at the Royal City Brewery Co. Join our
      community and enjoy music from local artists or take to the stage to share
      your talent.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link href="/signup" class="flex gap-1 items-center justify-center">
        Sign-up
      </Link>
      <Link
        size="lg"
        style="outline"
        href="/about"
        class="flex gap-1 items-center justify-center"
      >
        Learn more
      </Link>
    </div>
  </div>
</main>
